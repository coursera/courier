{
  "linters" : {
    "scalastyle": {
      "type"                :   "scalastyle",
      "include"             :   "(\\.scala$)",
      "exclude"             :   [ "(^spec/)",
                                  "(^runtime/src/main/scala/org/coursera/courier/data)"],

      "config"              :   "./scalastyle_config.xml"
    },
    "json": {
      "type"                :   "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "spelling" : {
      "type"                :   "spelling",
      "exclude"             :   "(/vendor/)"
    },
    "chmod" : {
      "type"                :   "chmod"
    },
    "generated" : {
      "type"                :   "generated"
    },
    "nolint" : {
      "type"                :   "nolint"
    }
  }
}
